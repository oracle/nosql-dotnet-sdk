{
    "metadata": [
        {
            "src": [
                {
					"src": "../Oracle.NoSQL.SDK/src",
                    "files": [ "*.csproj" ]
                }
            ],
            "dest": "obj/api",
            "shouldSkipMarkup": true,
			"memberLayout": "separatePages"
        }
    ],
    "build": {
        "content": [
            {
                "files": [ "**/*.yml" ],
                "src": "obj/api",
                "dest": "api"
            },
            {
                "files": [ "tutorials/*.md", "*.md", "toc.yml" ]
            }
        ],
        "dest": "_site",
        "globalMetadata": {
            "_appTitle": "NoSQL SDK for .NET",
            "_enableSearch": true,
            "_appFooter": "<span>Copyright Â© 2020, 2024 Oracle and/or its affiliates. All rights reserved.</span>",
			"_appLogoPath": "Logo.png",
			"_appFaviconPath": "favicon.ico",
			"_disableContribution": true
        },
        "markdownEngineName": "markdig",
        "overwrite": "specs/*.md",
        "postProcessors": [
            "ExtractSearchIndex"
        ],
        "resource": [
            {
                "files": [ "Logo.png", "favicon.ico", "LICENSE.txt", "THIRD_PARTY_LICENSES.txt" ]
            }
        ],
		"template": [ "statictoc", "template" ],
		"xref": [
		  "https://learn.microsoft.com/en-us/dotnet/.xrefmap.json"
		]
    }
}
